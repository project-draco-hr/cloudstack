def __sign(self, payload):
    '\n        @Name : __sign\n        @Desc:signs a given request URL when the apiKey and\n              secretKey are known\n        @param payload: dict of GET params to be signed\n        @return: the signature of the payload\n        '
    params = zip(payload.keys(), payload.values())
    params.sort(key=(lambda k: str.lower(k[0])))
    hash_str = '&'.join(['='.join([str.lower(r[0]), str.lower(urllib.quote_plus(str(r[1]))).replace('+', '%20')]) for r in params])
    signature = base64.encodestring(hmac.new(self.securityKey, hash_str, hashlib.sha1).digest()).strip()
    return signature
