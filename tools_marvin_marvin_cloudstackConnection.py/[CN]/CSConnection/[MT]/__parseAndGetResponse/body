def __parseAndGetResponse(self, cmd_response, response_cls, is_async):
    '\n        @Name : __parseAndGetResponse\n        @Desc : Verifies the  Response(from CS) and returns an\n                appropriate json parsed Response\n        @Input: cmd_response: Command Response from cs\n                response_cls : Mapping class for this Response\n                is_async: Whether the cmd is async or not.\n        @Output:Response output from CS\n        '
    try:
        ret = jsonHelper.getResultObj(cmd_response.json(), response_cls)
    except TypeError:
        ret = jsonHelper.getResultObj(cmd_response.json, response_cls)
    '\n        If the response is asynchronous, poll and return response\n        else return response as it is\n        '
    if (is_async == 'false'):
        self.logger.debug(('Response : %s' % str(ret)))
        return ret
    else:
        response = self.__poll(ret.jobid, response_cls)
        self.logger.debug(('Response : %s' % str(response)))
        return (response.jobresult if (response != FAILED) else FAILED)
