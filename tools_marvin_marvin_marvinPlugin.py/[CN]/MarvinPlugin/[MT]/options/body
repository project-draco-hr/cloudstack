def options(self, parser, env):
    '\n        Register command line options\n        '
    parser.add_option('--marvin-config', action='store', default=env.get('MARVIN_CONFIG', './datacenter.cfg'), dest='config_file', help=(("Marvin's configuration file where the " + 'datacenter information is specified ') + '[MARVIN_CONFIG]'))
    parser.add_option('--load', action='store_true', default=False, dest='load', help='Only load the deployment configuration given')
    parser.add_option('--log-folder-path', action='store', default=None, dest='log_folder_path', help='Path to the folder where log files will be stored')
    Plugin.options(self, parser, env)
