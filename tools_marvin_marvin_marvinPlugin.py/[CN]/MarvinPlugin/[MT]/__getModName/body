def __getModName(self, inp, type='file'):
    '\n        @Desc : Returns the module name from the path\n        @Output: trimmed down module name, used for logging\n        @Input: type:Whether the type is file or dir\n                inp:input element  \n        '
    if (type == 'file'):
        temp = os.path.splitext(inp)[0]
        return os.path.split(temp)[(-1)]
    if (type == 'dir'):
        return os.path.split(inp)[(-1)]
