def validate_uploaded_volume(self, up_volid, volumestate):
    config = Configurations.list(self.apiclient, name='upload.operation.timeout')
    uploadtimeout = int(config[0].value)
    time.sleep((uploadtimeout * 60))
    list_volume_response = Volume.list(self.apiclient, id=up_volid)
    self.assertNotEqual(list_volume_response, None, 'Check if volume exists in ListVolumes')
    self.assertEqual(list_volume_response[0].state, volumestate, 'Check volume state in ListVolumes')
