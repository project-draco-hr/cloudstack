@attr(tags=['advancedns'], required_hardware='true')
def test_invalid_public_interface(self):
    'Test add netscaler device with invalid public interface\n        '
    self.debug('Passing invalid public interface for NetScaler')
    netscaler_config = dict(self.services['netscaler_VPX'])
    netscaler_config.update({'publicinterface': random_gen(), })
    self.debug(('Adding netscaler device: %s' % netscaler_config['ipaddress']))
    self.debug(('Public interface: %s' % netscaler_config['publicinterface']))
    with self.assertRaises(Exception):
        NetScaler.add(self.apiclient, netscaler_config, physicalnetworkid=self.physical_network.id)
