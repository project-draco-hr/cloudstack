@classmethod
def create_isolated_network(cls, network_offering_id):
    isolated_network = Network.create(cls.api_client, cls.services['isolated_network'], networkofferingid=network_offering_id, accountid=cls.account.name, domainid=cls.domain.id, zoneid=cls.zone.id)
    cls.debug(('isolated network is created: ' + isolated_network.id))
    return isolated_network
