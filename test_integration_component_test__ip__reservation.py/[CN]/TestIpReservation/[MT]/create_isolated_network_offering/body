@classmethod
def create_isolated_network_offering(cls, network_offering):
    isolated_network_offering = NetworkOffering.create(cls.api_client, cls.services[network_offering], conservemode=False)
    network_offering_update_response = NetworkOffering.update(isolated_network_offering, cls.api_client, id=isolated_network_offering.id, state='enabled')
    return isolated_network_offering
