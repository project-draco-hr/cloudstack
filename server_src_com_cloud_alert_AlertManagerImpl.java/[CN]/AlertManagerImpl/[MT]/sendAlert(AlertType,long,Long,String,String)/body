{
  AlertGenerator.publishAlertOnEventBus(alertType.getName(),dataCenterId,podId,subject,body);
  try {
    if (_emailAlert != null) {
      _emailAlert.sendAlert(alertType,dataCenterId,podId,null,subject,body);
    }
 else {
      logger.warn(" alertType:: " + alertType + " // dataCenterId:: "+ dataCenterId+ " // podId:: "+ podId+ " // message:: "+ subject+ " // body:: "+ body);
    }
  }
 catch (  Exception ex) {
    logger.error("Problem sending email alert",ex);
  }
}
