{
  _executor.execute(new Runnable(){
    @Override public void run(){
      try {
        smtpTrans.connect();
        smtpTrans.sendMessage(msg,msg.getAllRecipients());
        smtpTrans.close();
      }
 catch (      SendFailedException e) {
        logger.error(" Failed to send email alert " + e);
      }
catch (      MessagingException e) {
        logger.error(" Failed to send email alert " + e);
      }
    }
  }
);
}
