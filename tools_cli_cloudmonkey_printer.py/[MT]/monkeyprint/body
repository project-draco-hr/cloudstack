def monkeyprint(color=True, *args):
    fmter = MonkeyFormatter()
    lexer = MonkeyLexer()
    lexer.encoding = 'utf-8'
    fmter.encoding = 'utf-8'
    output = ''
    try:
        for arg in args:
            if isinstance(type(arg), types.NoneType):
                continue
            output += str(arg)
    except Exception as e:
        print e
    if color:
        highlight(output, lexer, fmter, sys.stdout)
    else:
        print output
