@attr(configuration='vm.instancename.flag')
@attr(tags=['advanced', 'basic', 'sg', 'eip', 'advancedns', 'simulator'], required_hardware='false')
def test_05_unsupported_chars_in_display_name(self):
    ' Test Unsupported chars in the display name\n            (eg: Spaces,Exclamation,yet to get unsupported chars from the dev)\n        '
    self.debug('Creating VM with unsupported chars in display name')
    display_names = ['!hkzs566', 'asdh asd', '!dsf d']
    for display_name in display_names:
        self.debug(('Display name: %s' % display_name))
        self.services['virtual_machine']['displayname'] = display_name
        with self.assertRaises(Exception):
            VirtualMachine.create(self.apiclient, self.services['virtual_machine'], accountid=self.account.name, domainid=self.account.domainid, serviceofferingid=self.service_offering.id)
    return
