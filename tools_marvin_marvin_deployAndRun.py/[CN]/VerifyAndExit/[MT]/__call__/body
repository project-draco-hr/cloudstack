def __call__(self, original_func):

    def new_function(*args, **kwargs):
        exit_check = False
        try:
            try:
                if (original_func(*args, **kwargs) == FAILED):
                    exit_check = True
            except Exception as e:
                print '---', e
                exit_check = True
        finally:
            if exit_check:
                print ('==== %s ====' % self.msg)
                MarvinCliHelp.do_printhelp()
                sys.exit(1)
    return new_function
