def checkTCPath(tc_path):
    '\n    Verifies if the tc_path is a folder or file and its existence\n    '
    ret = {'tc_file': None, 'tc_dir': None, }
    check = True
    if (tc_path is None):
        printAndExit()
    elif os.path.isfile(tc_path):
        ret['tc_file'] = tc_path
    elif os.path.isdir(tc_path):
        ret['tc_dir'] = tc_path
    else:
        check = False
    if (check is False):
        print '\nTC Path is Invalid.So Exiting'
        exit(1)
    return ret
