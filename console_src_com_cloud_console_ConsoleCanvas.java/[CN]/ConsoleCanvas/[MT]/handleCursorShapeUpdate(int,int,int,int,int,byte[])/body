{
  softCursorFree();
  if (width * height == 0)   return;
  if (viewer.ignoreCursorUpdate()) {
    int bytesPerRow=(width + 7) / 8;
    int bytesMaskData=bytesPerRow * height;
    if (encodingType == rfb.EncodingXCursor) {
      rfb.is.readFully(captureBuffer);
    }
 else {
      rfb.is.readFully(captureBuffer);
    }
    return;
  }
  softCursorSource=decodeCursorShape(encodingType,width,height,captureBuffer);
  origCursorWidth=width;
  origCursorHeight=height;
  origHotX=xhot;
  origHotY=yhot;
  createSoftCursor();
  showSoftCursor=true;
  repaint(viewer.getDeferCursorUpdateTimeout(),cursorX - hotX,cursorY - hotY,cursorWidth,cursorHeight);
}
