{
  int oldX=cursorX;
  int oldY=cursorY;
  cursorX=x;
  cursorY=y;
  if (showSoftCursor) {
    repaint(viewer.getDeferCursorUpdateTimeout(),oldX - hotX,oldY - hotY,cursorWidth,cursorHeight);
    repaint(viewer.getDeferCursorUpdateTimeout(),cursorX - hotX,cursorY - hotY,cursorWidth,cursorHeight);
  }
}
