{
  Account account=_accountService.getActiveAccountByName(accountName,domain.getId());
  if (account == null) {
    _accountService.createUserAccount(user.getUsername(),generatePassword(),user.getFirstname(),user.getLastname(),user.getEmail(),timezone,accountName,accountType,domain.getId(),domain.getNetworkDomain(),details,UUID.randomUUID().toString(),UUID.randomUUID().toString());
  }
 else {
    _accountService.createUser(user.getUsername(),generatePassword(),user.getFirstname(),user.getLastname(),user.getEmail(),timezone,accountName,domain.getId(),UUID.randomUUID().toString());
  }
}
