{
  if (datePattern != null) {
    now.setTime(System.currentTimeMillis());
    sdf=new SimpleDateFormat(datePattern);
    int type=computeCheckPeriod();
    rc.setType(type);
    nextCheck=rc.getNextCheckMillis(now);
  }
 else {
    if (rollDate)     LogLog.error("Either DatePattern or rollingStyle options are not set for [" + name + "].");
  }
  existingInit();
  super.activateOptions();
  if (rollDate && fileName != null && scheduledFilename == null)   scheduledFilename=fileName + sdf.format(now);
}
