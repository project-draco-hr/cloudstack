def check_ssh_into_vm(self):
    for o in self.networks:
        for vm in o.get_vms():
            try:
                virtual_machine = vm.get_vm()
                virtual_machine.ssh_client = None
                public_ip = vm.get_ip()
                self.logger.debug(('Checking if we can SSH into VM=%s on public_ip=%s' % (virtual_machine.name, public_ip.ipaddress.ipaddress)))
                virtual_machine.get_ssh_client(ipaddress=public_ip.ipaddress.ipaddress)
                self.logger.debug(('SSH into VM=%s on public_ip=%s is successful' % (virtual_machine.name, public_ip.ipaddress.ipaddress)))
            except:
                self.fail(('Failed to SSH into VM - %s' % public_ip.ipaddress.ipaddress))
