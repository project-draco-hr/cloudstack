def find_storage_pool_type(apiclient, storagetype='NetworkFileSystem'):
    '\n    @name : find_storage_pool_type\n    @Desc : Returns true if the given storage pool type exists\n    @Input : type : type of the storage pool[NFS, RBD, etc.,]\n    @Output : True : if the type of storage is found\n              False : if the type of storage is not found\n              FAILED In case the cmd failed\n    '
    cmd = listStoragePools.listStoragePoolsCmd()
    cmd_out = apiclient.listStoragePools(cmd)
    if (validateList(cmd_out)[0] != PASS):
        return FAILED
    for storage_pool in cmd_out:
        if (storage_pool.type.lower() == storagetype):
            return True
    return False
