{
  if (uuid == null)   return;
  Account caller=CallContext.current().getCallingAccount();
  if (!(caller.getId() == Account.ACCOUNT_ID_SYSTEM || _accountMgr.isRootAdmin(caller.getType()))) {
    throw new PermissionDeniedException("Please check your permissions, you are not allowed to create/update custom id");
  }
  if (!IsUuidFormat(uuid))   throw new InvalidParameterValueException("UUID: " + uuid + " doesn't follow the UUID format");
  if (!IsUuidUnique(entityType,uuid))   throw new InvalidParameterValueException("UUID: " + uuid + " already exists so can't create/update with custom id");
}
