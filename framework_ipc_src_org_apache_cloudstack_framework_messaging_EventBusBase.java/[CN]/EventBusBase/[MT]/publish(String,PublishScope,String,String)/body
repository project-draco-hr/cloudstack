{
  if (_gate.enter(true)) {
    List<SubscriptionNode> chainFromTop=new ArrayList<SubscriptionNode>();
    SubscriptionNode current=locate(subject,chainFromTop,false);
    if (current != null)     current.notifySubscribers(subject,senderAddress,args);
    Collections.reverse(chainFromTop);
    for (    SubscriptionNode node : chainFromTop)     node.notifySubscribers(subject,senderAddress,args);
    _gate.leave();
  }
}
