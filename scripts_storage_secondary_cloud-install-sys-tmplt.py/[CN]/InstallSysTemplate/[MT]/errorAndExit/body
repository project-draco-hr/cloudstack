def errorAndExit(self, msg):
    err = ('\n\nWe apologize for below error:\n***************************************************************\n%s\n***************************************************************\nPlease run:\n\n    cloud-install-sys-tmplt -h\n\nfor full help\n' % msg)
    sys.stderr.write(err)
    sys.stderr.flush()
    sys.exit(1)
