{
  Layout layout=new SimpleLayout();
  DailyRollingFileAppender appender=new DailyRollingFileAppender(layout,"output/drfa_nopattern.log",null);
  VectorErrorHandler errorHandler=new VectorErrorHandler();
  appender.setErrorHandler(errorHandler);
  appender.rollOver();
  assertEquals(1,errorHandler.size());
  assertEquals("Missing DatePattern option in rollOver().",errorHandler.getMessage(0));
}
