def rescan(ids, scanstring='- - -'):
    for id in ids:
        util.SMlog(('Rescanning bus id %s with %s' % (id, scanstring)))
        path = ('/sys/class/scsi_host/host%s/scan' % id)
        if os.path.exists(path):
            try:
                f = open(path, 'w')
                f.write(('%s\n' % scanstring))
                f.close()
            except:
                pass
