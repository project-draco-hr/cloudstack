def getserial(path):
    dev = os.path.join('/dev', getdev(path))
    try:
        cmd = ['sginfo', '-s', dev]
        text = re.sub('\\s+', '', util.pread2(cmd))
    except:
        raise xs_errors.XenError('EIO', opterr=('An error occured querying device serial number [%s]' % dev))
    try:
        return text.split("'")[1]
    except:
        return ''
