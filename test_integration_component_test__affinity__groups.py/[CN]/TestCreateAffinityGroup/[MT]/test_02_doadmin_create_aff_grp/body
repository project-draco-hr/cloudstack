@attr(tags=['simulator', 'basic', 'advanced'])
def test_02_doadmin_create_aff_grp(self):
    self.new_domain = Domain.create(self.api_client, self.services['new_domain'])
    self.do_admin = Account.create(self.api_client, self.services['new_account'], admin=True, domainid=self.new_domain.id)
    self.cleanup.append(self.do_admin)
    self.cleanup.append(self.new_domain)
    self.create_aff_grp(aff_grp=self.services['host_anti_affinity_0'], acc=self.do_admin.name, domainid=self.new_domain.id)
    AffinityGroup.delete(self.api_client, name=self.aff_grp.name, account=self.do_admin.name, domainid=self.new_domain.id)
    self.debug(('Deleted Affinity Group: %s' % self.aff_grp.name))
