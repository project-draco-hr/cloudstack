{
  try {
    ServerSocket sock=new ServerSocket(port);
    while (true) {
      final Socket s=sock.accept();
      Thread t=new Thread(new Runnable(){
        public void run(){
          processTCP(s);
        }
      }
);
      t.start();
    }
  }
 catch (  IOException e) {
    logger.error("serveTCP failed: " + e);
  }
}
