def checkVolumeSize(ssh_handle=None, volume_name='/dev/sda', cmd_inp='/sbin/fdisk -l | grep Disk', size_to_verify=0):
    '\n    @Name : getDiskUsage\n    @Desc : provides facility to verify the volume size against the size to verify\n    @Input: 1. ssh_handle : machine against which to execute the disk size cmd\n            2. volume_name : The name of the volume against which to verify the size\n            3. cmd_inp : Input command used to veify the size\n            4. size_to_verify: size against which to compare.\n    @Output: Returns FAILED in case of an issue, else SUCCESS\n    '
    try:
        if ((ssh_handle is None) or (cmd_inp is None) or (volume_name is None)):
            return INVALID_INPUT
        cmd = cmd_inp
        '\n        Retrieve the cmd output\n        '
        if (system().lower() != 'windows'):
            fdisk_output = ssh_handle.runCommand(cmd_inp)
            if (fdisk_output['status'] != SUCCESS):
                return FAILED
            temp_out = fdisk_output['stdout']
            for line in temp_out.split('\n'):
                if (volume_name in line):
                    parts = line.split()
                    if (str(parts[(-2)]) == str(size_to_verify)):
                        return [SUCCESS, str(parts[(-2)])]
            return [FAILED, 'Volume Not Found']
    except Exception as e:
        print ('\n Exception Occurred under getDiskUsage: %s' % GetDetailExceptionInfo(e))
        return [FAILED, GetDetailExceptionInfo(e)]
