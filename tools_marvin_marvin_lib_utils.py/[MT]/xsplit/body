def xsplit(txt, seps):
    '\n    Split a string in `txt` by list of delimiters in `seps`\n    @param txt: string to split\n    @param seps: list of separators\n    @return: list of split units\n    '
    default_sep = seps[0]
    for sep in seps[1:]:
        txt = txt.replace(sep, default_sep)
    return [i.strip() for i in txt.split(default_sep)]
