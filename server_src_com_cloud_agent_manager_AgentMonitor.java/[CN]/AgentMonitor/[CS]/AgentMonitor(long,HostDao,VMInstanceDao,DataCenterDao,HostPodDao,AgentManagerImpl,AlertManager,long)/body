{
  super("AgentMonitor");
  _msId=msId;
  _pingTimeout=pingTimeout;
  _hostDao=hostDao;
  _agentMgr=agentMgr;
  _stop=false;
  _vmDao=vmDao;
  _dcDao=dcDao;
  _podDao=podDao;
  _alertMgr=alertMgr;
  Connection conn=Transaction.getStandaloneConnection();
  if (conn == null) {
    throw new CloudRuntimeException("Unable to get a db connection.");
  }
  _concierge=new ConnectionConcierge("AgentMonitor",conn,true,true);
}
