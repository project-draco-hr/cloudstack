def waitfordevice(self, timeout=15):
    ' Wait up to 15 seconds for a device to become available '
    count = 0
    while (count < timeout):
        if (self.dev in self.devlist):
            return True
        time.sleep(1)
        count += 1
        self.buildlist()
    logging.error('Device %s cannot be configured - device was not found', self.dev)
    return False
