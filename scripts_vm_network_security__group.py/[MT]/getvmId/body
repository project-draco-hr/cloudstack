def getvmId(vmName):
    conn = libvirt.openReadOnly(driver)
    if (conn == None):
        print 'Failed to open connection to the hypervisor'
        sys.exit(3)
    try:
        dom = conn.lookupByName(vmName)
    except libvirt.libvirtError:
        return None
    conn.close()
    res = dom.ID()
    if isinstance(res, int):
        res = str(res)
    return res
