def getvmId(vmName):
    conn = libvirt.openReadOnly('qemu:///system')
    if (conn == None):
        print 'Failed to open connection to the hypervisor'
        sys.exit(3)
    try:
        dom = conn.lookupByName(domain)
    except libvirt.libvirtError:
        return None
    conn.close()
    return dom.ID()
