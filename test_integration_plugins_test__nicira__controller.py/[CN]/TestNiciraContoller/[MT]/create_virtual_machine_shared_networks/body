def create_virtual_machine_shared_networks(self, network):
    virtual_machine = VirtualMachine.create(self.api_client, self.vm_services['small'], accountid=self.admin_account, domainid=self.admin_domain.id, serviceofferingid=self.service_offering.id, networkids=[network.id], mode='BASIC')
    self.test_cleanup.append(virtual_machine)
    return virtual_machine
