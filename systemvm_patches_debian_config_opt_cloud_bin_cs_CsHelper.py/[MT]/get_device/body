def get_device(ip):
    ' Returns the device which has a specific ip \n    If the ip is not found returns an empty string\n    '
    for i in execute('ip addr show'):
        vals = i.strip().lstrip().rstrip().split()
        if (vals[0] == 'inet'):
            if (vals[1].split('/')[0] == ip):
                return vals[(-1)]
    return ''
