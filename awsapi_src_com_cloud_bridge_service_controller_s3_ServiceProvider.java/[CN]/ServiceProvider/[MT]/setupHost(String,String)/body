{
  mhost=mhostDao.getByHostKey(hostKey);
  if (mhost == null) {
    mhost=new MHostVO();
    mhost.setHostKey(hostKey);
    mhost.setHost(host);
    mhost.setLastHeartbeatTime(DateHelper.currentGMTTime());
    mhost=mhostDao.persist(mhost);
  }
 else {
    mhost.setHost(host);
    mhostDao.update(mhost.getId(),mhost);
  }
}
