{
  byte[] b=new byte[10];
  b[0]=(byte)FramebufferUpdateRequest;
  b[1]=(byte)(incremental ? 1 : 0);
  b[2]=(byte)((x >> 8) & 0xff);
  b[3]=(byte)(x & 0xff);
  b[4]=(byte)((y >> 8) & 0xff);
  b[5]=(byte)(y & 0xff);
  b[6]=(byte)((w >> 8) & 0xff);
  b[7]=(byte)(w & 0xff);
  b[8]=(byte)((h >> 8) & 0xff);
  b[9]=(byte)(h & 0xff);
  os.write(b);
}
