{
  byte[] buf=new byte[3];
  int bytes=0;
  buf[bytes++]=(byte)(len & 0x7F);
  if (len > 0x7F) {
    buf[bytes - 1]|=0x80;
    buf[bytes++]=(byte)(len >> 7 & 0x7F);
    if (len > 0x3FFF) {
      buf[bytes - 1]|=0x80;
      buf[bytes++]=(byte)(len >> 14 & 0xFF);
    }
  }
  rec.write(buf,0,bytes);
}
