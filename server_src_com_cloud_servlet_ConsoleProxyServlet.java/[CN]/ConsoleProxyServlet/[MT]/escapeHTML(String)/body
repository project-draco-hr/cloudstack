{
  if (content == null || content.isEmpty())   return content;
  StringBuffer sb=new StringBuffer();
  for (int i=0; i < content.length(); i++) {
    char c=content.charAt(i);
switch (c) {
case '<':
      sb.append("&lt;");
    break;
case '>':
  sb.append("&gt;");
break;
case '&':
sb.append("&amp;");
break;
case '"':
sb.append("&quot;");
break;
case ' ':
sb.append("&nbsp;");
break;
default :
sb.append(c);
break;
}
}
return sb.toString();
}
