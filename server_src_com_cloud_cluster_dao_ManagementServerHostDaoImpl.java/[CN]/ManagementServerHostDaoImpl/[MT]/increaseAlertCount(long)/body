{
  Transaction txn=Transaction.currentTxn();
  PreparedStatement pstmt=null;
  try {
    txn.start();
    pstmt=txn.prepareAutoCloseStatement("update mshost set alert_count=alert_count+1 where id=?");
    pstmt.setLong(1,id);
    pstmt.executeUpdate();
    txn.commit();
  }
 catch (  Exception e) {
    s_logger.warn("Unexpected exception, ",e);
    txn.rollback();
  }
}
