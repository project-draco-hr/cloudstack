{
  String args=null;
  if (option.equals("get")) {
    args="-g";
  }
 else   if (option.equals("create")) {
    args="-c";
  }
 else   if (option.equals("reset")) {
    args="-r";
  }
 else   if (option.equals("addVif")) {
    args="-a";
    args+=ethName;
  }
 else   if (option.equals("deleteVif")) {
    args="-d";
    args+=ethName;
  }
  try {
    if (s_logger.isTraceEnabled()) {
      s_logger.trace("Executing /opt/cloud/bin/netusage.sh " + args + " on DomR "+ privateIpAddress);
    }
    VmwareManager mgr=getServiceContext().getStockObject(VmwareManager.CONTEXT_STOCK_NAME);
    Pair<Boolean,String> result=SshHelper.sshExecute(privateIpAddress,DEFAULT_DOMR_SSHPORT,"root",mgr.getSystemVMKeyFile(),null,"/opt/cloud/bin/netusage.sh " + args);
    if (!result.first()) {
      return null;
    }
    return result.second();
  }
 catch (  Throwable e) {
    s_logger.error("Unable to execute NetworkUsage command on DomR (" + privateIpAddress + "), domR may not be ready yet. failure due to "+ VmwareHelper.getExceptionMessage(e),e);
  }
  return null;
}
