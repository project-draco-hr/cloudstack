{
  if (agent == null) {
    return true;
  }
  boolean res;
  if (!investigate) {
    res=super.handleDisconnect(agent,event);
  }
 else {
    res=super.handleDisconnectWithInvestigation(agent,event);
  }
  if (res && broadcast) {
    notifyNodesInCluster(agent);
    return true;
  }
 else {
    return false;
  }
}
