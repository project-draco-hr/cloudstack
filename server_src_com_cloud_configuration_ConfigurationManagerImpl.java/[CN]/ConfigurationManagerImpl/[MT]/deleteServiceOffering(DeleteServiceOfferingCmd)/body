{
  Long offeringId=cmd.getId();
  Long userId=UserContext.current().getUserId();
  if (userId == null) {
    userId=Long.valueOf(User.UID_SYSTEM);
  }
  ServiceOfferingVO offering=_serviceOfferingDao.findById(offeringId);
  if (offering == null) {
    throw new ServerApiException(BaseCmd.PARAM_ERROR,"unable to find service offering " + offeringId);
  }
 else   if (offering.getRemoved() != null) {
    throw new ServerApiException(BaseCmd.PARAM_ERROR,"unable to find service offering " + offeringId);
  }
  if (_serviceOfferingDao.remove(offeringId)) {
    saveConfigurationEvent(userId,null,EventTypes.EVENT_SERVICE_OFFERING_EDIT,"Successfully deleted service offering with name: " + offering.getName(),"soId=" + offeringId,"name=" + offering.getName(),"displayText=" + offering.getDisplayText(),"offerHA=" + offering.getOfferHA(),"useVirtualNetwork=" + (offering.getGuestIpType() == GuestIpType.Virtualized));
    return true;
  }
 else {
    return false;
  }
}
