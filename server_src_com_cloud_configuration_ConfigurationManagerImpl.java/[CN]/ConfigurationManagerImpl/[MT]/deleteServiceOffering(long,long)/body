{
  ServiceOfferingVO offering=_serviceOfferingDao.findById(serviceOfferingId);
  if (_serviceOfferingDao.remove(serviceOfferingId)) {
    saveConfigurationEvent(userId,null,EventTypes.EVENT_SERVICE_OFFERING_EDIT,"Successfully deleted service offering with name: " + offering.getName(),"soId=" + serviceOfferingId,"name=" + offering.getName(),"displayText=" + offering.getDisplayText(),"offerHA=" + offering.getOfferHA(),"useVirtualNetwork=" + (offering.getGuestIpType() == NetworkOffering.GuestIpType.Virtualized));
    return true;
  }
 else {
    return false;
  }
}
