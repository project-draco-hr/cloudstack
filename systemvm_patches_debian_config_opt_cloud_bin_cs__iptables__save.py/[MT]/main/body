def main():
    '\n    main parses options, filnames and the like\n    one option (-s) may be given: input-filename\n    if none given, it defaults to: rules\n    '
    usage = 'usage:  %prog --help | -h \n\n\t%prog: version 0.9.8'
    usage = (usage + '\tHave Fun!')
    parser = OptionParser(usage)
    parser.disable_interspersed_args()
    parser.add_option('-s', '', dest='sourcefile', help='file with iptables commands, default: rules\n')
    (options, args) = parser.parse_args()
    hlp = '\n\tplease use "--help" as argument, abort!\n'
    if (options.sourcefile is None):
        options.sourcefile = 'rules'
    sourcefile = options.sourcefile
    chains = Tables(sourcefile)
    chains.table_printout()
