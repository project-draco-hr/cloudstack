def getMSip():
    global MS_ip
    if (len(sys.argv) >= 3):
        sys.exit('Only One argument is required .. Enter your Management Server IP')
    if (len(sys.argv) == 1):
        sys.exit('Atleast One argument is required .. Enter your Management Server IP')
    for arg in sys.argv[1:]:
        MS_ip = arg
        return MS_ip
