{
  Filter searchFilter=new Filter(DomainVO.class,"id",true,cmd.getStartIndex(),cmd.getPageSizeVal());
  Long domainId=cmd.getId();
  String domainName=cmd.getDomainName();
  Boolean isRecursive=cmd.isRecursive();
  Object keyword=cmd.getKeyword();
  List<DomainVO> domainList=null;
  if (isRecursive == null) {
    isRecursive=false;
  }
  Account account=UserContext.current().getAccount();
  if (account != null) {
    if (domainId != null) {
      if (!_domainDao.isChildDomain(account.getDomainId(),domainId)) {
        throw new PermissionDeniedException("Unable to list domains children for domain id " + domainId + ", permission denied.");
      }
    }
 else {
      domainId=account.getDomainId();
    }
  }
  domainList=searchForDomainChildren(searchFilter,domainId,domainName,keyword,null);
  if (isRecursive) {
    List<DomainVO> childDomains=new ArrayList<DomainVO>();
    for (    DomainVO domain : domainList) {
      String path=domain.getPath();
      childDomains.addAll(searchForDomainChildren(searchFilter,null,null,null,path));
    }
    return childDomains;
  }
 else {
    return domainList;
  }
}
