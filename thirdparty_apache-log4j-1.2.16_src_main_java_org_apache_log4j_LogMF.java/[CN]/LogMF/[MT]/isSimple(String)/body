{
  if (pattern.indexOf('\'') != -1) {
    return false;
  }
  for (int pos=pattern.indexOf('{'); pos != -1; pos=pattern.indexOf('{',pos + 1)) {
    if (pos + 2 >= pattern.length() || pattern.charAt(pos + 2) != '}' || pattern.charAt(pos + 1) < '0' || pattern.charAt(pos + 1) > '9') {
      return false;
    }
  }
  return true;
}
