{
  StoragePool storagePool=getStoragePool(_conn,cmd.getPool());
  if (storagePool == null) {
    return new Answer(cmd,false," Failed to create storage pool");
  }
  StoragePoolInfo spi=null;
  try {
    spi=storagePool.getInfo();
  }
 catch (  LibvirtException e) {
  }
  Map<String,TemplateInfo> tInfo=new HashMap<String,TemplateInfo>();
  ModifyStoragePoolAnswer answer=new ModifyStoragePoolAnswer(cmd,spi.capacity,spi.allocation,tInfo);
  KVMHABase.NfsStoragePool pool=new KVMHABase.NfsStoragePool(cmd.getPool().getUuid(),cmd.getPool().getHost(),cmd.getPool().getPath(),_mountPoint + File.separator + cmd.getPool().getUuid(),PoolType.PrimaryStorage);
  _monitor.addStoragePool(pool);
  addStoragePool(cmd.getPool().getUuid());
  try {
    storagePool.free();
  }
 catch (  LibvirtException e) {
  }
  return answer;
}
