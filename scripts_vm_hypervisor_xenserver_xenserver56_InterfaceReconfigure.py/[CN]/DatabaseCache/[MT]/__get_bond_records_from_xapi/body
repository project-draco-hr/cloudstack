def __get_bond_records_from_xapi(self, session):
    self.__bonds = {}
    for b in session.xenapi.Bond.get_all():
        rec = session.xenapi.Bond.get_record(b)
        if (not self.__pif_on_host(rec['master'])):
            continue
        self.__bonds[b] = {}
        for f in _BOND_ATTRS:
            self.__bonds[b][f] = rec[f]
