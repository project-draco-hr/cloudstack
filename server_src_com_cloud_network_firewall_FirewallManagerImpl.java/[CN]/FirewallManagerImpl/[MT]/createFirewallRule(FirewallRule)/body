{
  Account caller=UserContext.current().getCaller();
  if (rule.getSourceCidrList() == null && (rule.getPurpose() == Purpose.Firewall || rule.getPurpose() == Purpose.NetworkACL)) {
    _firewallDao.loadSourceCidrs((FirewallRuleVO)rule);
  }
  return createFirewallRule(rule.getSourceIpAddressId(),caller,rule.getXid(),rule.getSourcePortStart(),rule.getSourcePortEnd(),rule.getProtocol(),rule.getSourceCidrList(),rule.getIcmpCode(),rule.getIcmpType(),null,rule.getType(),rule.getNetworkId());
}
