{
  ManagedObjectReference morTask=_context.getService().zeroFillVirtualDiskTask(_mor,name,morDc);
  boolean result=_context.getVimClient().waitForTask(morTask);
  if (!result)   throw new Exception("Unable to zero fill virtual disk " + name + " due to "+ TaskMO.getTaskFailureInfo(_context,morTask));
  _context.waitForTaskProgressDone(morTask);
}
