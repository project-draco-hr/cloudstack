{
  ManagedObjectReference morTask=_context.getService().createVirtualDiskTask(_mor,name,morDc,diskSpec);
  boolean result=_context.getVimClient().waitForTask(morTask);
  if (!result)   throw new Exception("Unable to create virtual disk " + name + " due to "+ TaskMO.getTaskFailureInfo(_context,morTask));
  _context.waitForTaskProgressDone(morTask);
}
