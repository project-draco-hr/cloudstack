{
  Task task=null;
  try {
    task=vdi.copyAsync(conn,sr);
    waitForTask(conn,task,5 * 1000,2 * 60 * 60* 1000);
    checkForSuccess(conn,task);
    VDI dvdi=Types.toVDI(task,conn);
    return dvdi;
  }
  finally {
    if (task != null) {
      try {
        task.destroy(conn);
      }
 catch (      Exception e1) {
        s_logger.warn("unable to destroy task(" + task.toString() + ") on host("+ _host.uuid+ ") due to "+ e1.toString());
      }
    }
  }
}
