{
  String args="";
  if (add) {
    args+=" -A ";
  }
 else {
    args+=" -D ";
  }
  args+=" -l ";
  args+=pubIP;
  args+=" -c ";
  args+=nicname;
  args+=" -g ";
  args+=gateway;
  args+=" -m ";
  args+=netmask;
  args+=" -n ";
  args+=subnet;
  String result=routerProxy("vpc_ipassoc.sh",routerIP,args);
  if (result != null) {
    throw new InternalErrorException("KVM plugin \"vpc_ipassoc\" failed:" + result);
  }
}
