{
  String args="";
  if (add) {
    args+="-A";
  }
 else {
    args+="-D";
  }
  String cidrSize=Long.toString(NetUtils.getCidrSize(vlanNetmask));
  if (sourceNat) {
    args+=" -s";
  }
  if (firstIP) {
    args+=" -f";
  }
  args+=" -l ";
  args+=publicIpAddress + "/" + cidrSize;
  String publicNic="eth" + nicNum;
  args+=" -c ";
  args+=publicNic;
  args+=" -g ";
  args+=vlanGateway;
  if (newNic) {
    args+=" -n";
  }
  return executeInVR(privateIpAddress,"ipassoc.sh",args);
}
