def do_set(self, args):
    '\n        Set config for CloudStack CLI. Available options are:\n        host, port, apiKey, secretKey, log_file, history_file\n        You may also edit your ~/.cloudmonkey_config instead of using set.\n\n        Example:\n        set host 192.168.56.2\n        set prompt \xf0\x9f\x90\xb5 cloudmonkey>\n        set log_file /var/log/cloudmonkey.log\n        '
    args = shlex.split(args.strip())
    if (len(args) == 2):
        (key, value) = args
        setattr(self, key, value)
        self.write_config()
    else:
        self.print_shell('Please use the syntax: set valid-key value')
