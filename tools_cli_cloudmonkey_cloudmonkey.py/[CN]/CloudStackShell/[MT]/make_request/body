def make_request(self, command, requests={}):
    conn = cloudConnection(self.host, port=int(self.port), apiKey=self.apikey, securityKey=self.secretkey, logging=logging.getLogger('cloudConnection'))
    try:
        response = conn.make_request(command, requests)
        return response
    except cloudstackAPIException as e:
        self.print_shell('API Error:', e)
    except HTTPError as e:
        self.print_shell(e)
    except URLError as e:
        self.print_shell('Connection Error:', e)
