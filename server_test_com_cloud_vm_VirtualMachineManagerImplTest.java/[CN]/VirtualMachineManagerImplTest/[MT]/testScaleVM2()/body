{
  DeployDestination dest=new DeployDestination(null,null,null,_host);
  long l=1L;
  when(_vmInstanceDao.findById(anyLong())).thenReturn(_vmInstance);
  ServiceOfferingVO newServiceOffering=getSvcoffering(512);
