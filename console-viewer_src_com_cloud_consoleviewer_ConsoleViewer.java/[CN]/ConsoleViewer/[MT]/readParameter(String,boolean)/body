{
  if (inAnApplet) {
    String s=applet.getParameter(name);
    if ((s == null) && required) {
      fatalError(name + " parameter not specified");
    }
    return s;
  }
  for (int i=0; i < mainArgs.length; i+=2) {
    if (mainArgs[i].equalsIgnoreCase(name)) {
      try {
        return mainArgs[i + 1];
      }
 catch (      Exception e) {
        if (required) {
          fatalError(name + " parameter not specified");
        }
        return null;
      }
    }
  }
  if (required) {
    fatalError(name + " parameter not specified");
  }
  return null;
}
