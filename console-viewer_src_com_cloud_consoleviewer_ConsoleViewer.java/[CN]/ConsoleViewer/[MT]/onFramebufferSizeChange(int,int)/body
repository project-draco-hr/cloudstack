{
  if (inSeparateFrame) {
    if (desktopScrollPane != null)     vc.resizeDesktopFrame();
  }
 else {
    vc.setSize(vc.scaledWidth,vc.scaledHeight);
  }
  moveFocusToDesktop();
  try {
    rfb.writeFramebufferUpdateRequest(0,0,rfb.framebufferWidth,rfb.framebufferHeight,true);
  }
 catch (  IOException e) {
    s_logger.warn("Exception when sending frame buffer update request",e);
  }
}
