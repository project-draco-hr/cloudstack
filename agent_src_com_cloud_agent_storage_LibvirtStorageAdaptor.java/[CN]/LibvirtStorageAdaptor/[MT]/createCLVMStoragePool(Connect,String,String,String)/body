{
  String volgroupPath="/dev/" + path;
  LibvirtStoragePoolDef spd=new LibvirtStoragePoolDef(poolType.LOGICAL,uuid,uuid,host,volgroupPath,volgroupPath);
  StoragePool sp=null;
  try {
    s_logger.debug(spd.toString());
    sp=conn.storagePoolDefineXML(spd.toString(),0);
    sp.create(0);
    return sp;
  }
 catch (  LibvirtException e) {
    s_logger.debug(e.toString());
    if (sp != null) {
      try {
        sp.undefine();
        sp.free();
      }
 catch (      LibvirtException l) {
        s_logger.debug("Failed to define clvm storage pool with: " + l.toString());
      }
    }
    return null;
  }
}
