def add_host(self, cluster, hostname, sslthumbprint, username, password):
    '\n        Method to add host in a vCenter Cluster\n\n        :param cluster_name\n        :param hostname\n        :param username\n        :param password\n        '
    if (hostname is None):
        raise ValueError('Missing value for name.')
    try:
        hostspec = vim.host.ConnectSpec(hostName=hostname, userName=username, sslThumbprint=sslthumbprint, password=password, force=True)
        task = cluster.AddHost(spec=hostspec, asConnected=True)
    except Exception as e:
        print ('Error adding host :%s' % e)
    self.wait_for_task(task)
    host = self._get_obj([vim.HostSystem], hostname)
    return host
