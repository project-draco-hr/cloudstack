{
  PreparedStatement pstmt=null;
  try {
    pstmt=_conn.prepareStatement("SELECT 1");
    pstmt.executeQuery();
  }
 catch (  Throwable th) {
    s_logger.error("Unable to keep the db connection alive for locking purposes!",th);
  }
 finally {
    if (pstmt != null) {
      try {
        pstmt.close();
      }
 catch (      SQLException e) {
      }
    }
  }
}
