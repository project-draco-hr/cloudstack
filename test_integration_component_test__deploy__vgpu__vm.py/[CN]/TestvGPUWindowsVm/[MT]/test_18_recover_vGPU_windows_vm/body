@attr(tags=['advanced', 'basic', 'vgpu'], required_hardware='true')
def test_18_recover_vGPU_windows_vm(self):
    'Test recover Virtual Machine\n        '
    if self.vm_k1_card:
        self.vm_k1_card.recover(self.apiclient)
        self.vm_k1_card.getState(self.apiclient, 'Stopped')
    if self.vm_k2_card:
        self.vm_k2_card.recover(self.apiclient)
        self.vm_k2_card.getState(self.apiclient, 'Stopped')
    return
