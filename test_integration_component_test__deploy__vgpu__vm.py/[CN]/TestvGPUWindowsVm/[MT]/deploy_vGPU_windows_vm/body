@attr(tags=['advanced', 'basic', 'vgpu'], required_hardware='true')
def deploy_vGPU_windows_vm(self, vgpuofferingid):
    '\n        Validate vGPU K1 windows instances\n        '
    self.virtual_machine = VirtualMachine.create(self.apiclient, self.testdata['virtual_machine'], accountid=self.account.name, zoneid=self.zone.id, domainid=self.account.domainid, serviceofferingid=vgpuofferingid, templateid=self.template.id)
    time.sleep(600)
    self.virtual_machine.getState(self.apiclient, 'Running')
    '\n        Check for vGPU resources in the VM\n        '
    self.check_for_vGPU_resource(self.virtual_machine.hostid, self.virtual_machine.instancename, self.virtual_machine.serviceofferingid, self.virtual_machine.vgpu)
    return
