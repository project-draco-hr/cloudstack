{
  final Account caller=CallContext.current().getCallingAccount();
  AclGroup group=_aclGroupDao.findById(groupId);
  if (group == null) {
    throw new InvalidParameterValueException("Unable to find acl group: " + groupId + "; failed to remove roles from acl group.");
  }
  _accountMgr.checkAccess(caller,null,true,group);
  Transaction.execute(new TransactionCallbackNoReturn(){
    @Override public void doInTransactionWithoutResult(    TransactionStatus status){
      for (      Long policyId : policyIds) {
        AclPolicy policy=_aclPolicyDao.findById(policyId);
        if (policy == null) {
          throw new InvalidParameterValueException("Unable to find acl policy: " + policyId + "; failed to add policies to acl group.");
        }
        _accountMgr.checkAccess(caller,null,true,policy);
        AclGroupPolicyMapVO grMap=_aclGroupPolicyMapDao.findByGroupAndPolicy(groupId,policyId);
        if (grMap != null) {
          _aclGroupPolicyMapDao.remove(grMap.getId());
        }
      }
    }
  }
);
  return group;
}
