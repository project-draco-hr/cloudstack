@describe('access_key', 'Amazon access key')
@describe('secret_key', 'Amazon secret key')
@describe('region', 'Amazon region')
@describe('endpoint', 'Amazon endpoint')
def __init__(self, access_key=os.environ.get('AWS_ACCESS_KEY_ID', None), secret_key=os.environ.get('AWS_SECRET_ACCESS_KEY', None), region=None, endpoint=None):
    if (not access_key):
        raise OptionValueError, 'you need to specify an access key'
    if (not secret_key):
        raise OptionValueError, 'you need to specify a secret key'
    if (region and endpoint):
        raise OptionConflictError, ('mutually exclusive with --endpoint', '--region')
    self.__dict__.update(locals())
