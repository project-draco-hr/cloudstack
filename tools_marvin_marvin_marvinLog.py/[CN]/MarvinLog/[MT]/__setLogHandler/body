def __setLogHandler(self, log_file_path, log_format=None, log_level=logging.DEBUG):
    '\n        @Desc: Adds the given Log handler to the current logger\n        @Input: log_file_path: Log File Path as where to store the logs\n               log_format : Format of log messages to be dumped\n               log_level : Determines the level of logging for this logger\n        @Output: SUCCESS if no issues else FAILED\n        '
    try:
        if (log_file_path is not None):
            stream = logging.FileHandler(log_file_path)
        else:
            stream = logging.StreamHandler(stream=sys.stdout)
        if (log_format is not None):
            stream.setFormatter(log_format)
        else:
            stream.setFormatter(self.__class__.logFormat)
        stream.setLevel(log_level)
        self.__logger.addHandler(stream)
        return SUCCESS
    except Exception as e:
        print ('\nException Occurred Under __setLogHandler %s' % GetDetailExceptionInfo(e))
        return FAILED
