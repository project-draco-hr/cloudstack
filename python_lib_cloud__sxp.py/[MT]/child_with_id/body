def child_with_id(sxpr, id, val=None):
    'Find the first child with a given id.\n\n    sxpr   s-exp or list\n    id     id\n    val    value if not found (default None)\n\n    return s-exp or val\n    '
    if isinstance(sxpr, (types.ListType, types.TupleType)):
        for n in sxpr:
            if has_id(n, id):
                val = n
                break
    return val
