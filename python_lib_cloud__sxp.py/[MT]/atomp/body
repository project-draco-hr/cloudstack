def atomp(sxpr):
    'Check if an sxpr is an atom.\n    '
    if (sxpr.isalnum() or (sxpr == '@')):
        return 1
    for c in sxpr:
        if (c in string.whitespace):
            return 0
        if (c in '"\'\\(){}[]<>$#&%^'):
            return 0
        if (c in string.ascii_letters):
            continue
        if (c in string.digits):
            continue
        if (c in '.-_:/~'):
            continue
        return 0
    return 1
