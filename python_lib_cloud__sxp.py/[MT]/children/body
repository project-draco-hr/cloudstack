def children(sxpr, elt=None):
    'Get children of an sxpr.\n\n    sxpr sxpr\n    elt  optional element type to filter by\n\n    returns children (filtered by elt if specified)\n    '
    val = []
    if (isinstance(sxpr, (types.ListType, types.TupleType)) and (len(sxpr) > 1)):
        i = 1
        x = sxpr[i]
        if elementp(x, k_attr_open):
            i += 1
        val = sxpr[i:]
    if elt:

        def iselt(x):
            return elementp(x, elt)
        val = filter(iselt, val)
    return val
