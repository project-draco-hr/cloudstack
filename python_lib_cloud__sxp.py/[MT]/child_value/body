def child_value(sxpr, elt, val=None):
    'Get the value of the first child of the given element type.\n    Assumes the child has an atomic value.\n\n    sxpr sxpr\n    elt  element type\n    val  default value\n    '
    kid = child(sxpr, elt)
    if kid:
        val = child_at(kid, 0, val)
    return val
