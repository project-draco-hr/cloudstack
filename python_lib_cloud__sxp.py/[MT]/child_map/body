def child_map(sxpr):
    'Get a dict of the elements in sxpr and a list of its values.\n    The dict maps element name to the list of elements with that name,\n    and the list is the non-element children.\n\n    @param sxpr\n    @return (dict, list)\n    '
    m = {}
    v = []
    for x in children(sxpr):
        if elementp(x):
            n = name(x)
            l = m.get(n, [])
            l.append(x)
            m[n] = l
        else:
            v.append(x)
    return (m, v)
