def is_server_ssh_ready(ipaddress, port, username, password, retries=50):
    'Return ssh handle else wait till sshd is running'
    loop_cnt = retries
    while True:
        try:
            ssh = remoteSSHClient(ipaddress, port, username, password)
        except Exception as e:
            if (loop_cnt == 0):
                raise e
            loop_cnt = (loop_cnt - 1)
            time.sleep(30)
        else:
            return ssh
