@attr('simulator_only', tags=['advanced'], required_hardware='false')
def test_08_createNetwork_user(self):
    '\n        # Validate that Regular should be able to create network for himslef\n\t'
    self.apiclient.connection.apiKey = self.user_d1a_apikey
    self.apiclient.connection.securityKey = self.user_d1a_secretkey
    self.acldata['network']['name'] = 'd1a'
    self.acldata['network']['displayname'] = 'd1a'
    network = Network.create(self.apiclient, self.acldata['network'], networkofferingid=self.isolated_network_offering_id, zoneid=self.zone.id)
    self.assertEqual((network.state.lower() == ALLOCATED.lower()), True, 'User is not able to create a network for himself')
