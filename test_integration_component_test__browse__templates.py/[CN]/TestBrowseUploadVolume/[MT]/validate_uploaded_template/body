def validate_uploaded_template(self, up_templateid, templatestate, zid):
    config = Configurations.list(self.apiclient, name='upload.operation.timeout')
    uploadtimeout = int(config[0].value)
    time.sleep((uploadtimeout * 60))
    list_template_response = Template.list(self.apiclient, id=up_templateid, templatefilter='all', zoneid=zid)
    self.assertNotEqual(list_template_response, None, 'Check if template exists in ListTemplates')
    self.assertEqual(list_template_response[0].status, templatestate, 'Check template status in List templates')
    return
