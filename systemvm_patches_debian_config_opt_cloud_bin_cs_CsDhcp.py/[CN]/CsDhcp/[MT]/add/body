def add(self, entry):
    self.add_host(entry['ipv4_adress'], entry['host_name'])
    if self.cloud.search(('%s,' % entry['mac_address']), ('%s,%s,%s,infinite' % (entry['mac_address'], entry['ipv4_adress'], entry['host_name']))):
        self.changed.append({'mac': entry['mac_address'], 'ip4': entry['ipv4_adress'], 'host': entry['host_name'], })
    i = IPAddress(entry['ipv4_adress'])
    for v in self.devinfo:
        if ((i > v['network'].network) and (i < v['network'].broadcast)):
            v['dnsmasq'] = True
            v['gateway'] = entry['default_gateway']
