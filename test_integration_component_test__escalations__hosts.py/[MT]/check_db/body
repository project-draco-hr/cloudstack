def check_db(self, host_state):
    '\n    Function to check capacity_state in op_host_capacity table\n    '
    capacity_state = self.dbclient.execute(("select capacity_state from op_host_capacity where host_id='%s';" % self.host_db_id[0][0]))
    self.assertEqual(capacity_state[0][0], (host_state + 'd'), ('Invalid db query response for capacity_state %s' % self.host_db_id[0][0]))
    return capacity_state[0][0]
