{
  while (!started) {
    delay();
  }
  sendEvent(Event.LINK_SWITCH_TO_PULL_MODE,Direction.IN);
  if (verbose)   System.out.println("[" + this + "] INFO: Starting pull loop.");
  while (!shutdown) {
    ByteBuffer data=pull(true);
    if (data != null)     sink.handleData(data,this);
    if (!shutdown && data == null) {
      delay();
    }
  }
  if (verbose)   System.out.println("[" + this + "] INFO: Pull loop finished.");
}
