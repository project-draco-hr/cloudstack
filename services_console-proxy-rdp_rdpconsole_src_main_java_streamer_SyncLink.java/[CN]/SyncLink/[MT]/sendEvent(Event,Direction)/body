{
  if (verbose)   System.out.println("[" + this + "] INFO: Event "+ event+ " is received.");
switch (event) {
case STREAM_START:
{
      if (!start)       start=true;
 else       return;
      break;
    }
case STREAM_CLOSE:
{
    if (!shutdown)     shutdown=true;
 else     return;
    break;
  }
case LINK_SWITCH_TO_PULL_MODE:
{
  setPullMode();
  break;
}
}
switch (direction) {
case IN:
source.handleEvent(event,direction);
break;
case OUT:
sink.handleEvent(event,direction);
break;
}
}
