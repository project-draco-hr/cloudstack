{
  Connection conn=getConnection();
  try {
    Network nw=findOrCreateTunnelNetwork(conn,cmd.getBridgeName());
    String bridgeName=nw.getBridge(conn);
    String result=callHostPlugin(conn,"ovstunnel","configure_ovs_bridge_for_network_topology","bridge",bridgeName,"config",cmd.getVpcConfigInJson(),"host-id",((Long)cmd.getHostId()).toString());
    if (result.startsWith("SUCCESS")) {
      return new Answer(cmd,true,result);
    }
 else {
      return new Answer(cmd,false,result);
    }
  }
 catch (  Exception e) {
    s_logger.warn("caught exception while updating host with latest VPC topology",e);
    return new Answer(cmd,false,e.getMessage());
  }
}
