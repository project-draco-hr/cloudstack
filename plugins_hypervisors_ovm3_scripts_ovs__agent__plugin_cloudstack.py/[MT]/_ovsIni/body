def _ovsIni(setting, set):
    ini = '/etc/ovs-agent/agent.ini'
    replaced = False
    if os.path.isfile(ini):
        import fileinput
        for line in fileinput.FileInput(ini, inplace=1):
            line = line.rstrip('\n')
            if re.search(('%s=' % setting), line):
                line = ('%s=%s' % (setting, set))
                replaced = True
            print line
    return replaced
