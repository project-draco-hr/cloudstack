{
  SyslogAppender appender=new SyslogAppender();
  appender.setName("foo");
  appender.setThreshold(Level.INFO);
  VectorErrorHandler errorHandler=new VectorErrorHandler();
  appender.setErrorHandler(errorHandler);
  appender.setLayout(new PatternLayout("%m%n"));
  appender.activateOptions();
  Logger logger=Logger.getRootLogger();
  logger.addAppender(appender);
  logger.info("Should not be logged by SyslogAppenderTest.testAppendNoHost.");
  assertEquals(1,errorHandler.size());
  assertEquals("No syslog host is set for SyslogAppedender named \"foo\".",errorHandler.getMessage(0));
}
