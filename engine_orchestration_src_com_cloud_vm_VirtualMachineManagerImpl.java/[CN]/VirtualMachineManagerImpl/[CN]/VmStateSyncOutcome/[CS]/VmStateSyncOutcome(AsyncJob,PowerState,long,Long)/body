{
  super(VirtualMachine.class,job,VmJobCheckInterval.value(),new Predicate(){
    @Override public boolean checkCondition(){
      VMInstanceVO instance=_vmDao.findById(vmId);
      if (instance.getPowerState() == desiredPowerState && (srcHostIdForMigration != null && srcHostIdForMigration.equals(instance.getPowerHostId())))       return true;
      return false;
    }
  }
,Topics.VM_POWER_STATE,AsyncJob.Topics.JOB_STATE);
  _vmId=vmId;
}
