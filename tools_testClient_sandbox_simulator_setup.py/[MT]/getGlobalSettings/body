def getGlobalSettings():
    global_settings = {'expunge.delay': '60', 'expunge.interval': '60', 'expunge.workers': '3', 'workers': '10', 'use.user.concentrated.pod.allocation': 'false', 'vm.allocation.algorithm': 'random', 'vm.op.wait.interval': '5', 'guest.domain.suffix': 'sandbox.simulator', 'instance.name': 'SIMQA', 'direct.agent.load.size': '1000', 'default.page.size': '10000', 'linkLocalIp.nums': '10', 'check.pod.cidrs': 'false', }
    for (k, v) in global_settings.iteritems():
        cfg = configuration()
        cfg.name = k
        cfg.value = v
        yield cfg
