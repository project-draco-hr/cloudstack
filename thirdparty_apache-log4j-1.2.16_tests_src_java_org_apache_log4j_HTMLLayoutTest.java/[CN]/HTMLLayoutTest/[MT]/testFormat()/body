{
  Logger logger=Logger.getLogger("org.apache.log4j.xml.HTMLLayoutTest");
  NDC.push("NDC goes here");
  LoggingEvent event=new LoggingEvent("org.apache.log4j.Logger",logger,Level.INFO,"Hello, World",null);
  HTMLLayout layout=(HTMLLayout)createLayout();
  layout.setLocationInfo(true);
  String result=layout.format(event);
  NDC.pop();
  String src="<!DOCTYPE body [ <!ENTITY nbsp ' '>]><body>" + result + "</body>";
  parse(src);
}
