@attr('disruptive', 'simulator_only', tags=['advanced'], required_hardware='false')
def test_31_disableCluster(self):
    '\n\tDisable Cluster\n        Validate that listClusters() returns the  allocationstate as "Disabled"\n\t'
    self.debug(('Cluster to be disabled: ' + self.cluster.id))
    clusterupdResp = self.cluster.update(self.apiclient, allocationstate='Disabled')
    self.assertEqual(clusterupdResp.allocationstate, 'Disabled', 'Disabling Cluster did not set the alloctionstate to Disabled')
    clusterlistResp = Cluster.list(self.apiclient, id=self.cluster.id)
    self.assertEqual(clusterlistResp[0].allocationstate, 'Disabled', 'Disabling Cluster did not set the alloctionstate to Disabled')
