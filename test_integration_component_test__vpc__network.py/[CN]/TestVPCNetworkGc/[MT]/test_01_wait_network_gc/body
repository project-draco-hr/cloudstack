@attr(tags=['advanced', 'intervlan'])
def test_01_wait_network_gc(self):
    ' Test stop all the Vms that are part of the a Network\n            (Wait for network GC).Start 1 Vm from the network.\n        '
    self.debug('Waiting for network garbage collection thread to run')
    wait_for_cleanup(self.apiclient, ['network.gc.interval', 'network.gc.wait'])
    self.debug('Check if the VPC router is in stopped state?')
    routers = Router.list(self.apiclient, account=self.account.name, domainid=self.account.domainid, listall=True)
    self.assertEqual(isinstance(routers, list), True, 'List routers shall return a valid response')
    router = routers[0]
    self.assertEqual(router.state, 'Stopped', 'Router state should be stopped after netwrok.gc.interval')
    return
