def noOfVMsOnHost(self, hostId):
    listVms = VirtualMachine.list(self.apiclient, hostid=hostId)
    no_of_vms = 0
    if (listVms is not None):
        for vm in listVms:
            self.logger.debug('VirtualMachine on Hyp 1 = {}'.format(vm.id))
            no_of_vms = (no_of_vms + 1)
    return no_of_vms
