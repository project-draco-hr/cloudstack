{
  Transaction txn=Transaction.currentTxn();
  PreparedStatement pstmt=null;
  try {
    txn.start();
    String sql=CLEAR_STORAGE_CAPACITIES;
    pstmt=txn.prepareAutoCloseStatement(sql);
    pstmt.executeUpdate();
    txn.commit();
  }
 catch (  Exception e) {
    txn.rollback();
    s_logger.warn("Exception clearing storage capacities",e);
  }
}
