{
  when(mockDataCenter.getNetworkType()).thenReturn(NetworkType.Basic);
  when(mockDestination.getPod()).thenReturn(mockPod);
  final List<DeployDestination> destinations=deployment.findDestinations();
  assertEquals(ONLY_THE_PROVIDED_AS_DEFAULT_DESTINATION_WAS_EXPECTED,1,destinations.size());
  assertEquals(ONLY_THE_PROVIDED_AS_DEFAULT_DESTINATION_WAS_EXPECTED,mockDestination,destinations.get(0));
}
