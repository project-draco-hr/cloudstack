{
  if (imageStores.size() > 1) {
    Collections.shuffle(imageStores);
    Iterator<DataStore> i=imageStores.iterator();
    DataStore imageStore=null;
    while (i.hasNext()) {
      imageStore=i.next();
      if (_statsCollector.imageStoreHasEnoughCapacity(imageStore)) {
        return imageStore;
      }
    }
  }
  return imageStores.get(0);
}
