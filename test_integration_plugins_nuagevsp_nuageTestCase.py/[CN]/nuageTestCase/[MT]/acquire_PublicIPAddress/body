def acquire_PublicIPAddress(self, network, vpc=None, account=None):
    if (not account):
        account = self.account
    self.debug(('Associating public IP for network with ID - %s in the account - %s' % (network.id, account.name)))
    public_ip = PublicIPAddress.create(self.api_client, accountid=account.name, domainid=account.domainid, zoneid=self.zone.id, networkid=(network.id if (vpc is None) else None), vpcid=(vpc.id if vpc else (self.vpc.id if hasattr(self, 'vpc') else None)))
    self.debug(('Associated public IP address - %s with network with ID - %s' % (public_ip.ipaddress.ipaddress, network.id)))
    return public_ip
