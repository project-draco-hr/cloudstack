def acquire_PublicIPAddress(self, network, vpc=None):
    self.debug(('Associating public IP for network with ID - %s' % network.id))
    public_ip = PublicIPAddress.create(self.api_client, accountid=self.account.name, zoneid=self.zone.id, domainid=self.account.domainid, networkid=(network.id if (vpc is None) else None), vpcid=(vpc.id if vpc else (self.vpc.id if hasattr(self, 'vpc') else None)))
    self.debug(('Associated public IP address - %s with network with ID - %s' % (public_ip.ipaddress.ipaddress, network.id)))
    return public_ip
