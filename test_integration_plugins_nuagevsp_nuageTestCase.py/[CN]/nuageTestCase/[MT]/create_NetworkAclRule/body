def create_NetworkAclRule(self, rule, traffic_type='Ingress', network=None, acl_list=None):
    self.debug(('Adding NetworkACL rule - %s' % rule))
    if acl_list:
        return NetworkACL.create(self.api_client, networkid=(network.id if network else None), services=rule, traffictype=traffic_type, aclid=acl_list.id)
    else:
        return NetworkACL.create(self.api_client, networkid=(network.id if network else None), services=rule, traffictype=traffic_type)
