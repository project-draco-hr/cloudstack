def create_Vpc(self, vpc_offering, cidr='10.1.1.1/16', cleanup=True):
    self.debug(('Creating a VPC network in the account: %s' % self.account.name))
    self.test_data['vpc']['cidr'] = cidr
    vpc = VPC.create(self.api_client, self.test_data['vpc'], vpcofferingid=vpc_offering.id, zoneid=self.zone.id, account=self.account.name, domainid=self.account.domainid)
    self.debug(('Created VPC with ID: %s' % vpc.id))
    if cleanup:
        self.cleanup.append(vpc)
    return vpc
