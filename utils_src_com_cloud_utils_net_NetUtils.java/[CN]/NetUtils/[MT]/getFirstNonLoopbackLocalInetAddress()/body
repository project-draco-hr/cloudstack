{
  InetAddress[] addrs=getAllLocalInetAddresses();
  if (addrs != null) {
    for (    InetAddress addr : addrs) {
      if (s_logger.isInfoEnabled())       s_logger.info("Check local InetAddress : " + addr.toString() + ", total count :"+ addrs.length);
      if (!addr.isLoopbackAddress())       return addr;
    }
  }
  s_logger.warn("Unable to determine a non-loopback address, local inet address count :" + addrs.length);
  return null;
}
