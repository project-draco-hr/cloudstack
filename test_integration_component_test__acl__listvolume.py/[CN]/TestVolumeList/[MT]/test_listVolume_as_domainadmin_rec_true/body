@attr(tags=['advanced'], required_hardware='false')
def test_listVolume_as_domainadmin_rec_true(self):
    '\n\t# Test listing of Volumes by passing isrecusrive="true" parameter as domain admin\n\t# Validate that it returns all the Volumes that is owned by the domain admin\n\t'
    self.apiclient.connection.apiKey = self.user_d1_apikey
    self.apiclient.connection.securityKey = self.user_d1_secretkey
    volumeList = Volume.list(self.apiclient, isrecursive='true')
    self.debug(('List as Domain Admin  - isrecursive=true %s' % volumeList))
    self.assertEqual((len(volumeList) == 1), True, 'Number of items in list response check failed!!')
    if self.checkForExistenceOfValue(volumeList, self.vm_d1_volume[0].id):
        accountAccess = True
    else:
        accountAccess = False
    self.assertEqual(accountAccess, True, 'Account access check failed!!')
