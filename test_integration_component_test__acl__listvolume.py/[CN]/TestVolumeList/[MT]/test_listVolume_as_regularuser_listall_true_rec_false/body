@attr(tags=['advanced'], required_hardware='false')
def test_listVolume_as_regularuser_listall_true_rec_false(self):
    '\n\t# Test listing of Volumes by passing listall="true" and isrecusrive="false" parameter as regular user\n\t# Validate that it returns all the Volumes of the account the user belongs to \n\t'
    self.apiclient.connection.apiKey = self.user_d1a_apikey
    self.apiclient.connection.securityKey = self.user_d1a_secretkey
    volumeList = Volume.list(self.apiclient, listall='true', isrecursive='false')
    self.debug(('List as Regular User  - listall=true,isrecursive=false %s' % volumeList))
    self.assertEqual((len(volumeList) == 1), True, 'Number of items in list response check failed!!')
    if self.checkForExistenceOfValue(volumeList, self.vm_d1a_volume[0].id):
        accountAccess = True
    else:
        accountAccess = False
    self.assertEqual(accountAccess, True, 'Account access check failed!!')
