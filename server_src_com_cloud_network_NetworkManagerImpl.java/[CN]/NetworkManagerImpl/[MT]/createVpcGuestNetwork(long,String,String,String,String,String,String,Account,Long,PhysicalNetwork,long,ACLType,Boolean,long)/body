{
  _vpcMgr.validateGuestNtkwForVpc(_configMgr.getNetworkOffering(ntwkOffId),cidr,networkDomain,owner,_vpcMgr.getVpc(vpcId));
  Network guestNetwork=createGuestNetwork(ntwkOffId,name,displayText,gateway,cidr,vlanId,networkDomain,owner,domainId,pNtwk,zoneId,aclType,subdomainAccess,vpcId);
  List<DomainRouterVO> routers=_routerDao.listRoutersByVpcId(vpcId);
  for (  DomainRouterVO router : routers) {
    s_logger.debug("Adding router " + router + " to network "+ guestNetwork);
    _routerDao.addRouterToNetwork(router,guestNetwork);
  }
  return guestNetwork;
}
