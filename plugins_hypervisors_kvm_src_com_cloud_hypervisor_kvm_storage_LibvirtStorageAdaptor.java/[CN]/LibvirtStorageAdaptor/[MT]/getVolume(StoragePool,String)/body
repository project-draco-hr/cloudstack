{
  StorageVol vol=null;
  try {
    vol=pool.storageVolLookupByName(volName);
  }
 catch (  LibvirtException e) {
    s_logger.debug("Can't find volume: " + e.toString());
  }
  if (vol == null) {
    try {
      refreshPool(pool);
    }
 catch (    LibvirtException e) {
      s_logger.debug("failed to refresh pool: " + e.toString());
    }
    try {
      vol=pool.storageVolLookupByName(volName);
    }
 catch (    LibvirtException e) {
      throw new CloudRuntimeException(e.toString());
    }
  }
  return vol;
}
