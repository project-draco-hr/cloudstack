{
  File lockFile=new File(path);
  lockFile.getParentFile().mkdir();
  boolean havelock=false;
  try {
    while (wait > 0) {
      if (lockFile.createNewFile()) {
        havelock=true;
        break;
      }
      s_logger.debug("lockFile " + _lockfile + " already exists, waiting 1000 ms");
      Thread.sleep(1000);
      wait--;
    }
  }
 catch (  IOException e) {
  }
catch (  InterruptedException e) {
  }
  return havelock;
}
