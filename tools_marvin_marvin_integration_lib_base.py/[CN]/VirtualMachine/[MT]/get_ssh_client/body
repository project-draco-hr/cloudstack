def get_ssh_client(self, ipaddress=None, reconnect=False, port=None, keyPairFileLocation=None):
    'Get SSH object of VM'
    if (ipaddress != None):
        self.ssh_ip = ipaddress
    if port:
        self.ssh_port = port
    if (keyPairFileLocation is not None):
        self.password = None
    if reconnect:
        self.ssh_client = is_server_ssh_ready(self.ssh_ip, self.ssh_port, self.username, self.password, keyPairFileLocation=keyPairFileLocation)
    self.ssh_client = (self.ssh_client or is_server_ssh_ready(self.ssh_ip, self.ssh_port, self.username, self.password, keyPairFileLocation=keyPairFileLocation))
    return self.ssh_client
