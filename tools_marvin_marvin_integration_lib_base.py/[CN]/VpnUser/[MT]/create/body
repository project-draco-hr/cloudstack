@classmethod
def create(cls, apiclient, username, password, account=None, domainid=None, projectid=None, rand_name=True):
    'Create VPN user'
    cmd = addVpnUser.addVpnUserCmd()
    cmd.username = ('-'.join([username, random_gen()]) if rand_name else username)
    cmd.password = password
    if account:
        cmd.account = account
    if domainid:
        cmd.domainid = domainid
    if projectid:
        cmd.projectid = projectid
    return VpnUser(apiclient.addVpnUser(cmd).__dict__)
