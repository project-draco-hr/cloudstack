def _coalesceBegin(self):
    "Coalesce self onto parent. Only perform the actual coalescing of\n        VHD, but not the subsequent relinking. We'll do that as the next step,\n        after reloading the entire SR in case things have changed while we\n        were coalescing"
    self.validate()
    self.parent.validate()
    if self.sr.journaler.get(self.JRN_RELINK, self.uuid):
        Util.log('==> Coalesce apparently already done: skipping')
    else:
        self.parent._increaseSizeVirt(self.sizeVirt)
        self._coalesceVHD(0)
        self.parent.validate()
        self.parent.updateBlockInfo()
