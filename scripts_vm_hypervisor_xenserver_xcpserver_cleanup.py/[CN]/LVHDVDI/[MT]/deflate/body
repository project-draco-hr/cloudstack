def deflate(self):
    'deflate the LV containing the VHD to minimum'
    if self.raw:
        return
    self._activate()
    self.sr.lock()
    try:
        lvhdutil.deflate(self.sr.lvmCache, self.lvName, self.getSizeVHD())
    finally:
        self.sr.unlock()
    self.sizeLV = self.sr.lvmCache.getSize(self.lvName)
    self._sizeVHD = (-1)
