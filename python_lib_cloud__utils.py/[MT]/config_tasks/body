def config_tasks(brname):
    if (distro is CentOS):
        config_tasks = (SetupNetworking(brname), SetupLibvirt(), SetupRequiredServices(), SetupFirewall(), SetupFirewall2(brname))
    elif (distro in (Ubuntu, Fedora)):
        config_tasks = (SetupNetworking(brname), SetupCgConfig(), SetupCgRules(), SetupCgroupControllers(), SetupSecurityDriver(), SetupLibvirt(), SetupLiveMigration(), SetupRequiredServices(), SetupFirewall(), SetupFirewall2(brname))
    else:
        raise AssertionError('Unknown distribution')
    return config_tasks
