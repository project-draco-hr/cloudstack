{
  return new Runnable(){
    @Override public void run(){
      try {
        if (s_logger.isTraceEnabled()) {
          s_logger.trace("Cluster manager peer-scan, id:" + _mshostId);
        }
        if (!_peerScanInited) {
          _peerScanInited=true;
          initPeerScan();
        }
        peerScan();
      }
 catch (      Throwable e) {
        s_logger.error("Problem with the cluster peer-scan!",e);
      }
    }
  }
;
}
