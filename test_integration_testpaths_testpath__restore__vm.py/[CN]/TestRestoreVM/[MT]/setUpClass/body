@classmethod
def setUpClass(cls):
    testClient = super(TestRestoreVM, cls).getClsTestClient()
    cls.apiclient = testClient.getApiClient()
    cls.testdata = testClient.getParsedTestDataConfig()
    cls.hypervisor = cls.testClient.getHypervisorInfo()
    cls.domain = get_domain(cls.apiclient)
    cls.zone = get_zone(cls.apiclient, testClient.getZoneForTests())
    cls.template = get_template(cls.apiclient, cls.zone.id, cls.testdata['ostype'])
    cls._cleanup = []
    try:
        cls.skiptest = False
        if (cls.hypervisor.lower() not in ['vmware']):
            cls.skiptest = True
            return
        cls.account = Account.create(cls.apiclient, cls.testdata['account'], domainid=cls.domain.id)
        cls._cleanup.append(cls.account)
        cls.userapiclient = testClient.getUserApiClient(UserName=cls.account.name, DomainName=cls.account.domain)
        cls.service_offering_cwps = ServiceOffering.create(cls.apiclient, cls.testdata['service_offering'], tags=CLUSTERTAG1)
        cls._cleanup.append(cls.service_offering_cwps)
    except Exception as e:
        cls.tearDownClass()
        raise e
    return
