def formatDHCPFlow(bridge, inPort, vlan, ports):
    outputs = ''
    for i in ports:
        str = ('output:%s,' % i)
        outputs += str
    outputs = outputs[:(-1)]
    flow = ('in_port=%s dl_vlan=%s dl_type=0x0800 nw_proto=6 tp_src=547 idle_timeout=0 hard_timeout=0 \tpriority=10000 actions=strip_vlan,%s' % (inPort, vlan, outputs))
    return flow
