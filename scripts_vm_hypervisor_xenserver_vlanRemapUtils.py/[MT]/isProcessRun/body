def isProcessRun(pidFile, name):
    try:
        fpid = open(pidFile, 'r')
        pid = fpid.readline()
        fpid.close()
    except IOError as e:
        return (-1)
    pid = pid[:(-1)]
    ps = os.popen('ps -ae')
    for l in ps:
        if ((pid in l) and (name in l)):
            ps.close()
            return 0
    ps.close()
    return (-2)
