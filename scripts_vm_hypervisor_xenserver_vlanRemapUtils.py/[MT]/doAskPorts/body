def doAskPorts(bridge, vifNames):
    vifs = vifNames.split(',')
    if (len(vifs) == 0):
        return ' '
    ofports = []
    for vif in vifs:
        op = getVifPort(bridge, vif)
        if (op == None):
            log(('doAskPorts: no port(bridge:%s, vif:%s)' % (bridge, vif)))
            continue
        ofports.append(op)
    return ','.join(ofports)
