{
  hextile_bg=new Color(0);
  hextile_fg=new Color(0);
  for (int ty=y; ty < y + h; ty+=16) {
    int th=16;
    if (y + h - ty < 16)     th=y + h - ty;
    for (int tx=x; tx < x + w; tx+=16) {
      int tw=16;
      if (x + w - tx < 16)       tw=x + w - tx;
      handleHextileSubrect(tx,ty,tw,th);
    }
  }
  scheduleRepaint(x,y,w,h);
}
