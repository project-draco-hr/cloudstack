def __init__(self, dbag, cl):
    dnsmasq = CsDnsMasq()
    for item in dbag:
        if (item == 'id'):
            continue
        dnsmasq.add(dbag[item])
    dnsmasq.collect_leases()
    dnsmasq.to_str()
    dnsmasqb4 = CsDnsMasq(NO_PRELOAD)
    dnsmasqb4.parse_hosts()
    if (not dnsmasq.compare_hosts(dnsmasqb4)):
        dnsmasq.write_hosts()
    else:
        logging.debug('Hosts file is up to date')
