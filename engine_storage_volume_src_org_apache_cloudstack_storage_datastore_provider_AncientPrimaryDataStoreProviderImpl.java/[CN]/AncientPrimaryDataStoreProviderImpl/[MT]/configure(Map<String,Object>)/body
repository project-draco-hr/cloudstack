{
  lifecyle=ComponentContext.inject(AncientPrimaryDataStoreLifeCycleImpl.class);
  driver=ComponentContext.inject(AncientPrimaryDataStoreDriverImpl.class);
  uuid=(String)params.get("uuid");
  id=(Long)params.get("id");
