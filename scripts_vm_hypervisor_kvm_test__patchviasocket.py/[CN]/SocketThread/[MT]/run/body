def run(self):
    TIMEOUT = 0.314
    MAX_SIZE = (10 * 1024)
    s = socket.socket(socket.AF_UNIX, socket.SOCK_STREAM)
    s.bind(self._file)
    s.listen(1)
    s.settimeout(TIMEOUT)
    try:
        self._ready = True
        (client, address) = s.accept()
        self._data = client.recv(MAX_SIZE)
        client.close()
    except socket.timeout:
        pass
    s.close()
    os.remove(self._file)
