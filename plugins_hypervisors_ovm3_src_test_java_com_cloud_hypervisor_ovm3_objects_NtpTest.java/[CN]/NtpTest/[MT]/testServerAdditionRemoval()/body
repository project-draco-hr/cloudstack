{
  List<String> ntpHosts=new ArrayList<String>();
  con.setResult(details);
  nTp.getDetails();
  ntpHosts=nTp.getServers();
  assertEquals(ntpHosts.size(),2);
  nTp.removeServer("ovm-2");
  ntpHosts=nTp.getServers();
  assertEquals(ntpHosts.size(),1);
  nTp.removeServer("ovm-2");
  ntpHosts=nTp.getServers();
  assertEquals(ntpHosts.size(),1);
  nTp.addServer("ovm-1");
  ntpHosts=nTp.getServers();
  assertEquals(ntpHosts.size(),1);
}
