def get_InternalLbVm(self, network, source_ip):
    self.debug(('Finding the InternalLbVm for network with ID - %s and source IP address - %s' % (network.id, source_ip)))
    internal_lb_vms = self.list_InternalLbVms(network.id, source_ip)
    self.assertEqual(isinstance(internal_lb_vms, list), True, 'List InternalLbVms should return a valid list')
    return internal_lb_vms[0]
