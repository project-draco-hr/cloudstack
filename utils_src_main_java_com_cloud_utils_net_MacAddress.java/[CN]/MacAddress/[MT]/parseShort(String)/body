{
  s=s.toLowerCase();
  short out=0;
  byte shifts=0;
  char c;
  for (int i=0; i < s.length() && shifts < 4; i++) {
    c=s.charAt(i);
    if ((c > 47) && (c < 58)) {
      out<<=4;
      ++shifts;
      out|=c - 48;
    }
 else     if ((c > 96) && (c < 103)) {
      ++shifts;
      out<<=4;
      out|=c - 87;
    }
  }
  return out;
}
