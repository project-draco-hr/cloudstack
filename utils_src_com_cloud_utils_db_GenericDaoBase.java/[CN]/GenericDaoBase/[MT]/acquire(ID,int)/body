{
  Transaction txn=Transaction.currentTxn();
  T t=null;
  boolean locked=false;
  try {
    if (!txn.lock(_table + id.toString(),seconds)) {
      return null;
    }
    locked=true;
    t=findById(id);
    return t;
  }
  finally {
    if (t == null && locked) {
      txn.release(_table + id.toString());
    }
  }
}
