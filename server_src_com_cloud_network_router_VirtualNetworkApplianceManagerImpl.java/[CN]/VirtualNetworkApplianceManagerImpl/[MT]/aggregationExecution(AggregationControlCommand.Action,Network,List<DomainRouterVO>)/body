{
  for (  final DomainRouterVO router : routers) {
    final AggregationControlCommand cmd=new AggregationControlCommand(action,router.getInstanceName(),_routerControlHelper.getRouterControlIp(router.getId()),_routerControlHelper.getRouterIpInNetwork(network.getId(),router.getId()));
    final Commands cmds=new Commands(cmd);
    if (!_nwHelper.sendCommandsToRouter(router,cmds)) {
      return false;
    }
  }
  return true;
}
