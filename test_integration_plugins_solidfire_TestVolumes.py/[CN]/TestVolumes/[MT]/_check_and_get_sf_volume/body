def _check_and_get_sf_volume(self, sf_volumes, sf_volume_name, should_exist=True):
    sf_volume = None
    for volume in sf_volumes:
        if (volume['name'] == sf_volume_name):
            sf_volume = volume
            break
    if should_exist:
        self.assertNotEqual(sf_volume, None, ('Check if SF volume was created in correct account: ' + str(sf_volumes)))
    else:
        self.assertEqual(sf_volume, None, ('Check if SF volume was deleted: ' + str(sf_volumes)))
    return sf_volume
