def runTests(self):
    options = ['--process-timeout=3600', '--with-xunit', '-a tags=advanced', '--processes=5']
    options.append(('-w%s' % self.workingdir))
    if (self.workingdir is not None):
        nose.core.TestProgram(argv=options, testRunner=self.runner, config=self.cfg)
    elif (self.filename is not None):
        tests = self.loader.loadTestsFromFile(self.filename)
        nose.core.TestProgram(argv=options, testRunner=self.runner, config=self.cfg)
