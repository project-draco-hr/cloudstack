{
  if (length % 4 != 0)   throw new ArrayIndexOutOfBoundsException("Length of byte array must be dividable by 4 without remainder. Array length: " + length + ", remainder: "+ (length % 4)+ ".");
  int[] buf=new int[length / 4];
  for (int i=0, j=offset; i < buf.length; i++, j+=4) {
    buf[i]=(data[j + 0] & 0xFF) | ((data[j + 1] & 0xFF) << 8) | ((data[j + 2] & 0xFF) << 16)| ((data[j + 3] & 0xFF) << 24);
  }
  return buf;
}
