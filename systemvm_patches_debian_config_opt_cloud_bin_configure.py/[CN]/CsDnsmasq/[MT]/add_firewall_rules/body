def add_firewall_rules(self):
    ' Add the necessary firewall rules \n        '
    fw.append(['', 'front', ('-A INPUT -i %s -p udp -m udp --dport 67 -j ACCEPT' % self.dev)])
    fw.append(['', 'front', ('-A INPUT -i %s -d %s/32 -p udp -m udp --dport 53 -j ACCEPT' % (self.dev, self.ip))])
    fw.append(['', 'front', ('-A INPUT -i %s -d %s/32 -p tcp -m tcp --dport 53 -j ACCEPT' % (self.dev, self.ip))])
