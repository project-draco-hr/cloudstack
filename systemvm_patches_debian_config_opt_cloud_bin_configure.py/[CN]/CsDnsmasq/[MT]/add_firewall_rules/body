def add_firewall_rules(self, method):
    ' Add the necessary firewall rules \n        This is problamatic because the current logic cannot delete them\n        (In a convergence model)\n\n        We will need to store some state about what "used" to be there\n        '
    firewall = CsIpTables(self.dev)
    cmds = '-A INPUT -i %s -p udp -m udp --dport 67 -j %s'
    slist = [self.dev, 'ACCEPT']
    firewall.change_rule('', slist, cmds)
    cmds = '-A INPUT -i %s -d %s -p %s -m %s --dport %s -j %s'
    slist = [self.dev, self.ip, 'udp', 'udp', '53', 'ACCEPT']
    firewall.change_rule('', slist, cmds)
    cmds = '-A INPUT -i %s -d %s -p %s -m %s --dport %s -j %s'
    slist = [self.dev, self.ip, 'tcp', 'tcp', '53', 'ACCEPT']
    firewall.change_rule('', slist, cmds)
