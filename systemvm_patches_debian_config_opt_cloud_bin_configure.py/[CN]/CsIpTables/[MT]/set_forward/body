def set_forward(self, ip, method='add'):
    ' set a forward to the device chain\n        takes a CsIP object '
    slist = ['FORWARD', self.dev, ip['network'], self.devChain]
    if (method == 'add'):
        cmds = '-A %s -o %s -d %s -j %s'
    else:
        cmds = '-A %s -o %s -d %s -j %s'
    self.change_rule('mangle', slist, cmds)
