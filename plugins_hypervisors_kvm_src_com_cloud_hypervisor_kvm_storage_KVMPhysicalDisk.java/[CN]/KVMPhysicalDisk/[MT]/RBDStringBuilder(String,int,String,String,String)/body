{
  String rbdOpts;
  rbdOpts="rbd:" + image;
  rbdOpts+=":mon_host=" + monHost;
  if (monPort != 6789) {
    rbdOpts+="\\\\:" + monPort;
  }
  if (authUserName == null) {
    rbdOpts+=":auth_supported=none";
  }
 else {
    rbdOpts+=":auth_supported=cephx";
    rbdOpts+=":id=" + authUserName;
    rbdOpts+=":key=" + authSecret;
  }
  return rbdOpts;
}
