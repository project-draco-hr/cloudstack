@attr(tags=['advanced', 'basic'])
@attr(required_hardware='false')
@attr(configuration='apply.allocation.algorithm.to.pods')
def test_es_47_list_os_types_win_2012(self):
    '\n        @Desc: Test VM creation while "apply.allocation.algorithm.to.pods"\n        is set to true\n        @Reference: https://issues.apache.org/jira/browse/CLOUDSTACK-4947\n        @Steps:\n        Step1: register windows 2012 VM template as windows 8 template\n        Step2: deploy a VM with windows2012 template and  Verify\n        that VM creation is successful\n\n         '
    self.win2012_template = Template.register(self.apiClient, self.services['win2012template'], zoneid=self.zone.id, account=self.account.name, domainid=self.domain.id, hypervisor=self.hypervisor)
    self.win2012_template.download(self.apiClient)
    self.cleanup.append(self.win2012_template)
    time.sleep(60)
    self.debug(('Deploying win 2012 VM in account: %s' % self.account.name))
    self.services['virtual_machine']['displayname'] = 'win2012'
    self.services['virtual_machine']['zoneid'] = self.zone.id
    self.services['virtual_machine']['template'] = self.win2012_template.id
    vm1 = VirtualMachine.create(self.apiClient, self.services['virtual_machine'], accountid=self.account.name, domainid=self.account.domainid, serviceofferingid=self.service_offering.id)
    self.cleanup.append(vm1)
    self.assertEqual(vm1.state, 'Running', 'Check VM state is Running or not')
    return
