{
  if (logger.isInfoEnabled())   logger.info("Check to see if a worker VM with tag " + workerTag + " needs to be recycled");
  if (workerTag == null || workerTag.isEmpty()) {
    logger.error("Invalid worker VM tag " + workerTag);
    return false;
  }
  String tokens[]=workerTag.split("-");
  if (tokens.length != 3) {
    logger.error("Invalid worker VM tag " + workerTag);
    return false;
  }
  Long.parseLong(tokens[0]);
  long msid=Long.parseLong(tokens[1]);
  long runid=Long.parseLong(tokens[2]);
  if (_mshostPeerDao.countStateSeenInPeers(msid,runid,ManagementServerHost.State.Down) > 0) {
    if (logger.isInfoEnabled())     logger.info("Worker VM's owner management server node has been detected down from peer nodes, recycle it");
    return true;
  }
  if (runid != _clusterMgr.getManagementRunId(msid)) {
    if (logger.isInfoEnabled())     logger.info("Worker VM's owner management server has changed runid, recycle it");
    return true;
  }
  return false;
}
